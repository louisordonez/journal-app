<div>
  <%= form_with model: @task, url: category_tasks_path do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: 'label' %>
      <%= f.text_field :title, class: 'input', id: 'title' %>
    </div>
    <div class="mb-3">
      <%= f.label :description, class: 'label' %>
      <%= f.text_area :description, class: 'textarea', id: 'description' %>
    </div>
    <div class="mb-2">
      <%= f.label :deadline, class: 'label' %>
    </div>
    <div class="select mr-2 mb-3">
      <%= f.date_select :deadline, {date_separator: "</div><div class='select mr-2'>"} %>
    </div>
    <div class="is-flex is-justify-content-flex-end mt-5">
      <%= link_to 'Cancel', :back, class: 'button is-light mr-3' %>
      <%= f.submit class: 'button is-primary' %>
    </div>
  <% end %>
</div>
