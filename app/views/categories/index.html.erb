<div class="columns has-background-light">
  <div class="column"></div>
  <div class="column is-three-quarters p-6 box container-margin">
    <div class="is-flex is-flex-direction-row is-justify-content-space-between">
      <h3 class="title is-3 mb-5">Categories</h3>
      <%= link_to 'Create Category', new_category_path, class: 'button is-primary' %>
    </div>
    <div>
      <table class="table is-fullwidth">
        <thead>
          <tr>
            <th class="categories-table-header-width">Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @category.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <div class="buttons">
                  <%= link_to 'Show', "/categories/#{category.id}/tasks", class: 'button is-primary' %>
                  <%= link_to 'Edit', edit_category_path(category), class: 'button is-info' %>
                  <%= link_to 'Delete', category, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'button is-danger' %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="column"></div>
</div>
