<div class="columns has-background-light">
  <div class="column"></div>
  <div class="column is-three-quarters p-6 box container-margin">
    <div class="is-flex is-flex-direction-row is-justify-content-space-between">
      <h3 class="title is-3 mb-5">Categories</h3>
      <%= link_to 'Add Category', new_category_path, class: 'button is-primary' %>
    </div>
    <div>
      <table class="table is-fullwidth">
        <thead>
          <tr>
            <th class="categories-table-header-width">Category</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% @category.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td>
                <div class="buttons">
                  <%= link_to "/categories/#{category.id}/tasks", class: 'button is-primary' do %><i class="fa-solid fa-plus"></i><% end %>
                  <%= link_to edit_category_path(category), class: 'button is-info' do %><i class="fa-solid fa-pen"></i><% end %>
                  <%= link_to category, data: { confirm: "Are you sure?" }, method: :delete, class: 'button is-danger' do %>
                    <i class='fa-solid fa-trash'></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="column"></div>
</div>
