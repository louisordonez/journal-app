<%= render 'layouts/alert', object: category %>
<div>
  <%= form_with model: category do |f| %>
    <div class="mb-3">
      <%= f.label :name, class: 'label' %>
      <%= f.text_field :name, class: 'input', id: 'name' %>
    </div>
    <div class="is-flex is-justify-content-flex-end mt-5">
      <%= link_to 'Cancel', categories_path, class: 'button is-light mr-3' %>
      <%= f.submit class: 'button is-primary' %>
    </div>
  <% end %>
</div>
