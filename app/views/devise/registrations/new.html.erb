<div class="columns has-background-light">
  <div class="column"></div>
  <div class="column is-one-third p-6 box container-margin">
    <h3 class="title is-3 mb-5">Sign up</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
      </div>
      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <div class="field mb-5">
        <%= f.label :password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: 'button is-primary mb-5 is-fullwidth', data: {turbo: false} %>
      </div>
    <% end %>
    <div class="has-text-centered">
      <span>Already have an account? </span><%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="column"></div>
</div>
